<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>fr.openwide.core</groupId>
	<artifactId>owsi-core-parent</artifactId>
	<version>0.11.6</version>
	<packaging>pom</packaging>

	<name>OWSI Core - Parent</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<owsi-core.maven-release-plugin.version>2.5.2</owsi-core.maven-release-plugin.version>
		<maven-jgitflow-plugin.version>1.0-m5.1</maven-jgitflow-plugin.version>
		<owsi-core.jsch.version>0.1.55</owsi-core.jsch.version>
	</properties>

	<profiles>
		<profile>
			<id>owsi-core-release</id>
			<activation>
				<property>
					<name>distribution</name>
					<value>owsi-core-release</value>
				</property>
			</activation>
			<modules>
				<module>owsi-core</module>
			</modules>
		</profile>
		<profile>
			<id>all</id>
			<activation>
				<property>
					<name>!distribution</name>
				</property>
			</activation>
			<modules>
				<module>owsi-core</module>
				<module>basic-application</module>
			</modules>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>external.atlassian.jgitflow</groupId>
				<artifactId>jgitflow-maven-plugin</artifactId>
				<version>${maven-jgitflow-plugin.version}</version>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<flowInitContext>
						<masterBranchName>mt-0.11-master</masterBranchName>
						<developBranchName>mt-0.11-dev</developBranchName>
						<featureBranchPrefix>ft-0.11-</featureBranchPrefix>
						<releaseBranchPrefix>rl-0.11-</releaseBranchPrefix>
						<hotfixBranchPrefix>hf-0.11-</hotfixBranchPrefix>
						<versionTagPrefix>v</versionTagPrefix>
					</flowInitContext>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.jcraft</groupId>
						<artifactId>jsch</artifactId>
						<version>${owsi-core.jsch.version}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>${owsi-core.maven-release-plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

